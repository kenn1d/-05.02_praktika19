<UserControl x:Class="WpfApp1.Pages.Bilet.Items.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Pages.Bilet.Items"
             mc:Ignorable="d" >
    <Grid Margin="10" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100px"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image Source="/Images/free-icon-tickets-320416.png" Width="80" Height="80" VerticalAlignment="Top" 
            HorizontalAlignment="Left" Margin="10"/>
        <Label Grid.Column="1" Content="Кинотеатр" HorizontalAlignment="Left" Margin="10"
            VerticalAlignment="Top"/>
        <TextBox x:Name="kinoteatrs" Height="25" Grid.Column="1" Margin="10,36,10,0" VerticalAlignment="Top" IsEnabled="False"/>
        <TextBox x:Name="name" Height="25" Grid.Column="1" Margin="10,98,10,0" VerticalAlignment="Top" IsEnabled="False"/>
        <Label Grid.Column="2" Content="Дата" HorizontalAlignment="Left" Margin="10,10,0,0"
            VerticalAlignment="Top"/>
        <DatePicker x:Name="date" Height="25" Grid.Column="2" Margin="10,36,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="155"  IsEnabled="False"/>
        <TextBox x:Name="price" Height="25" Grid.Column="2" Margin="10,98,10,0" VerticalAlignment="Top" IsEnabled="False"/>
        <Label Grid.Column="1" Content="Наименование" HorizontalAlignment="Left" Margin="10,72,0,0" Height="26" VerticalAlignment="Top"/>
        <Label Grid.Column="2" Content="Стоимость" HorizontalAlignment="Left" Margin="10,72,0,0"
            VerticalAlignment="Top"/>
        <TextBox x:Name="time" Height="25" Grid.Column="2" Margin="170,36,10,0" VerticalAlignment="Top" IsEnabled="False"/>
    </Grid>
</UserControl>
