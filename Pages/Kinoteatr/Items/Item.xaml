<UserControl x:Class="WpfApp1.Pages.Kinoteatr.Items.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Pages.Kinoteatr.Items"
             mc:Ignorable="d" >
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100px"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image Source="/Images/3d_movies_folder_20527.png" Width="80" Height="80" VerticalAlignment="Top" 
           HorizontalAlignment="Left" Margin="10"/>
        <Label Grid.Column="1" Content="Наименование" Margin="10" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="name" Height="25" Grid.Column="1" Margin="10,36,10,0" IsEnabled="False" VerticalAlignment="Top"/>
        <Label Grid.Column="2" Content="Количество" HorizontalAlignment="Left" Margin="10" Height="25" VerticalAlignment="Top"/>
        <TextBox x:Name="countZal" Height="25" Grid.Column="2" Margin="10,36,10,0" IsEnabled="False" VerticalAlignment="Top"/>
        <Label Grid.Column="1" Content="Кол-во залов" HorizontalAlignment="Left" Margin="10,66,0,0" Height="25" VerticalAlignment="Top"/>
        <TextBox x:Name="count" Grid.Column="1" Height="25" Margin="10,95,10,0" IsEnabled="False" VerticalAlignment="Top"/>
        <Button Click="editRecord" Content="Изменить" Height="25" Margin="10,108,10,0" Background="#FF90FF5F" BorderBrush="#FF90FF5F" Foreground="White" VerticalAlignment="Top"/>
        <Button Click="deleteRecord" Content="Удалить" Height="25" Margin="10,138,10,0" Background="#FFFF5F5F" BorderBrush="#FF90FF5F" Foreground="White" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
