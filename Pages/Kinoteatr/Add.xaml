<Page x:Class="WpfApp1.Pages.Kinoteatr.Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages.Kinoteatr"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add">

    <Grid Background="Gainsboro">
        <Grid Margin="20" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100px"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Source="/Images/3d_movies_folder_20527.png" Width="80" Height="80" VerticalAlignment="Top" 
                   HorizontalAlignment="Left" Margin="10"/>
            <Label Grid.Column="1" Content="Наименование" HorizontalAlignment="Left" Margin="10"
                   VerticalAlignment="Top"/>
            <TextBox x:Name="name" Height="25" Grid.Column="1" Margin="10,36,10,0" VerticalAlignment="Top"/>
            <Label Grid.Column="2" Content="Кол-во" HorizontalAlignment="Left" Margin="10,10,0,0"
                VerticalAlignment="Top"/>
            <TextBox x:Name="countZal" Height="25" Grid.Column="2" Margin="10,36,10,0" VerticalAlignment="Top"/>
            <Label Grid.Column="1" Content="Кол-во залов" HorizontalAlignment="Left" Margin="10,72,0,0" Height="26" VerticalAlignment="Top"/>
            <TextBox x:Name="count" Height="25" Grid.Column="1" Margin="10,98,10,0" VerticalAlignment="Top"/>
            <Button x:Name="bthAdd" Click="AddRecord" Content="Добавить" Height="25" Grid.Column="2" Margin="220,98,10,0" Background="#FF90FF5F" BorderBrush="#FF90FF5F" Foreground="White" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</Page>
